{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bib</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bib.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bib.name }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ bib.userId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bib.status }}</td>
            </tr>
            <tr>
                <th>Textsummary</th>
                <td>{{ bib.textSummary }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bib_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bib_edit', { 'id': bib.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
