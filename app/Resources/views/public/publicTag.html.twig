{% extends 'base.html.twig' %}

{% block title %} tags list{% endblock %}
{% block body %}
    <h1>Tags list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.score }}</td>
                {% if tag.status == pending %}<td><a href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a></td>{% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_new') }}">Suggest a new tag</a>
        </li>
    </ul>
{% endblock %}
