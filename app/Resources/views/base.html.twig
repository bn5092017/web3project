<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Symfony web3{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/basic.css') }}">
            <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav>
        <ul>
        <li><a href="{{ path('index') }}">home</a></li>
        <li><a href="{{ path('ref_basket_index') }}">basket</a></li>
            {% if is_granted('ROLE_STUDENT') or is_granted('ROLE_LECTURER') or is_granted('ROLE_ADMIN')%}{#checks if user is logged in#}
            <a href="{{ path('logout') }}">logout</a>{#displays logout option if user is logged in#}
            {% else %}
            <a href="{{ path('login') }}">login</a>
            {% endif %}
        </ul>
    </nav>
    {% if is_granted('ROLE_STUDENT') or is_granted('ROLE_LECTURER') or is_granted('ROLE_ADMIN')%}
        <h1>{{ app.user.username }} is logged in</h1>
    {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
